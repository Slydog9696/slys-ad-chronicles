rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Public assets - anyone can read
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // User uploads - users can manage their own files
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Project assets - anyone can read, authenticated users can upload
    match /projects/{projectId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Profile pictures - users can manage their own
    match /profiles/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Blog post images - anyone can read, authenticated authors can upload
    match /blog/{postId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Default deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

